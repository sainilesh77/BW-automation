pipeline {
   agent any

   tools {
    nodejs "Node18"
    }

   stages {
       stage('Dependencies') {
           steps {
               sh 'npm i --force'
           }
       }
      stage('Test 1') {
            steps {
                sh 'npm run cy:uat'
            }
       }
       stage('Deploy') {
           steps {
               echo 'Deploying....'
           }
       }
  stage('Send Summary'){
    emailext body: '''${SCRIPT, template="allure-report.groovy"}''',
            subject: "[Jenkins] Test Execution Summary",
            to: "all@example.com"
  }
   }
}